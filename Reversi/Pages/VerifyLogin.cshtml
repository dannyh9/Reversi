@page
@model Reversi.Pages.VerifyLoginModel
@{
    ViewData["Title"] = "Verify account";
}
<div class="container">
    <div class="row justify-content-center align-items-center" style="height:300px">
        <div class="col-4">
            <div class="card">
                <div class="card-body">
                    <form method="post" autocomplete="off">
                        <h1>Authenticate</h1>
                        <div class="LoginError">
                            @ViewData["error"]
                        </div>
                        <div class="form-group">
                            <input type="text" class="form-control" name="code" placeholder="Code">
                        </div>

                        <button type="submit" id="sendverify" class="btn btn-primary">Verify</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>