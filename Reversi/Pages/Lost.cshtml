@page
@model Reversi.Pages.LostModel
@{
}

<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css">
<div class="form-gap"></div>
<div class="container">
    <div class="row justify-content-center align-items-center" style="height:300px">
        <div class="col-md-4 col-md-offset-4">
            <div class="panel panel-default">
                <div class="panel-body">
                    <div class="text-center">
                        @if (ViewData["validToken"] !=null)
                        {
                            <div class="panel-body">
                                <p>Kies een nieuw wachtwoord</p>
                                <form id="register-form" role="form" autocomplete="off" class="form" method="post">
                                    <div class="form-group">
                                        <label for="password">Wachtwoord *</label>
                                        <input type="password" class="form-control" name="Password1" id="password">
                                    </div>
                                    <div class="form-group">
                                        <label for="password2">Herhaal wachtwoord *</label>
                                        <input type="password" class="form-control" name="Password2" id="password">
                                    </div>
                                    <input type="hidden" class="form-control" name="email" value="@ViewData["email"]">
                                    <div class="form-group">
                                        <input name="reset" asp-page-handler="reset" value="Verander wachtwoord" class="btn btn-lg btn-primary btn-block" type="submit">
                                    </div>
                                </form>
                            </div>
                            <!-- TODO formulier voor wachtwoord aan te passen-->
                        }
                        else
                        {
                            <h3><i class="fa fa-lock fa-4x"></i></h3>
                            <h2 class="text-center">Wachtwoord vergeten?</h2>
                            <div class="LoginError">
                                @if (ViewData["msg"] != null || ViewData["msg"] != "")
                                {
                                    <p>@ViewData["msg"]</p>
                                }
                                else
                                {
                                    <p>Voer je email adres in</p>
                                }
                            </div>
                            <div class="panel-body">
                                <form id="register-form" role="form" autocomplete="off" class="form" method="post">
                                    <div class="form-group">
                                        <div class="input-group">
                                            <span class="input-group-addon"><i class="glyphicon glyphicon-envelope color-blue"></i></span>
                                            <input id="email" name="email" placeholder="email address" class="form-control" type="email">
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <input name="recover-submit" class="btn btn-lg btn-primary btn-block" value="Reset wachtwoord" type="submit">
                                    </div>
                                </form>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>