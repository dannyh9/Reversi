@page
@model Reversi.Pages.EditAccountModel
@{
}
<h1>Account Aanpassen</h1>
<a href="/Account">Terug</a>
<form method="post">
    <div class="form-group row">
        <label for="username" class="col-sm-2 col-form-label">Gebruikersnaam *</label>
        <div class="col-sm-10">
            <input type="hidden" name="id" value="@ViewData["id"]" />
            <input name="username" type="text" class="form-control" value="@ViewData["username"]">

        </div>
    </div>
    <div class="form-group row">
        <label for="staticEmail" class="col-sm-2 col-form-label">Email *</label>
        <div class="col-sm-10">
            <input name="email" type="email" class="form-control" value="@ViewData["email"]">
        </div>
    </div>
    <div class="form-group row">
        <label for="inputPassword" class="col-sm-2 col-form-label">Nieuw Wachtwoord</label>
        <div class="col-sm-10">
            <input name="password" type="password" class="form-control" id="inputPassword" placeholder="Password">
        </div>
    </div>
    <div class="form-group row">
        <label for="Role" class="col-sm-2 col-form-label">Rechten *</label>
        <div class="col-sm-10">
            <select name="role" class="form-control">
                <option value="0">Archiveer</option>
                <option value="1">Gebruiker</option>
                <option value="2">Helpdesk</option>
                <option value="3">Administrator</option>
            </select>
        </div>
    </div>
    <div class="form-group row">
        <input type="submit" value="Aanpassen" />
    </div>
</form>
